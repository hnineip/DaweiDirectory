<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2fd"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/restaurant_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/phoneno_card"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_detail_image"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/phone_number_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/ic_local_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/restaurant_phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="098765432"
                android:textSize="16sp"
                android:layout_margin="@dimen/dimen_16"
                app:layout_constraintLeft_toRightOf="@id/phone_number_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/address_card"
        app:layout_constraintTop_toBottomOf="@+id/phoneno_card"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/ic_location"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/restruant_address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                tools:text="No.456, Yay Road"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/dimen_16"
                app:layout_constraintLeft_toRightOf="@id/address_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_map_restruant"
        app:layout_constraintTop_toBottomOf="@+id/address_card"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/ic_map"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/restruant_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Open in maps"
                android:textSize="16sp"
                android:layout_margin="@dimen/dimen_16"
                app:layout_constraintLeft_toRightOf="@id/map_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>