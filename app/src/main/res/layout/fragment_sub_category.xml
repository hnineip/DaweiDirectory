<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color"
    android:elevation="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_12"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/dimen_8"
            android:background="@drawable/ic_iconfinder_categories"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/category_vertical_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sub_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Category"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/category_vertical_line"
            app:layout_constraintTop_toBottomOf="@id/icon_category" />

        <View
            android:id="@+id/category_vertical_line"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#80FCE4EC"
            android:layout_marginLeft="@dimen/dimen_8"
            app:layout_constraintLeft_toRightOf="@id/sub_name"
            app:layout_constraintRight_toLeftOf="@id/sub_name"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/icon_famous_place"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/dimen_8"
            android:background="@drawable/ic_location_place"
            app:layout_constraintLeft_toRightOf="@id/category_vertical_line"
            app:layout_constraintRight_toLeftOf="@id/place_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sub_famous_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Famous Places"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/category_vertical_line"
            app:layout_constraintRight_toLeftOf="@id/place_line"
            app:layout_constraintTop_toBottomOf="@id/icon_famous_place" />

        <View
            android:id="@+id/place_line"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#80FCE4EC"
            android:layout_marginRight="@dimen/dimen_16"
            app:layout_constraintLeft_toRightOf="@id/sub_famous_name"
            app:layout_constraintRight_toLeftOf="@id/icon_emergency"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/icon_emergency"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_12"
            android:background="@drawable/ic_emergency"
            app:layout_constraintLeft_toRightOf="@id/place_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sub_emergency_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Emergency"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dimen_8"
            app:layout_constraintLeft_toRightOf="@id/place_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_emergency" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>